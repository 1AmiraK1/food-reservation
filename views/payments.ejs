<%- include('partials/appHeader'); -%>

 <div class="flex-column h-100">
        <h1 class="display-6 display-md-5 bold mb-4">
            <a class="text-decoration-none text-dark">💰 پرداخت‌ها و امورمالی</a>
        </h1>
        <div class="card p-5">
                <% if (errors && errors.length> 0) { %>
                    <div class="alert alert-danger mb-4" role="alert">
                        خطایی پیش آمده است!
                        <ul class="m-0">
                            <% errors.forEach(item=> { %>
                                <li>
                                    <%= item.msg %>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                    <% } %>


                       

                        <h5 class="text-center mb-4">📋 تاریخچه پرداخت‌ها</h5>
                        <table class="table table-bordered reservation-table table-striped">
                            <thead class="table-light">
                                <tr class="text-center">
                                    <th>تاریخ</th>
                                    <th>نوع</th>
                                    <th>مبلغ</th>
                                </tr>
                            </thead>
                             <tbody class="text-center">
      <% payments.forEach(p => { %>
        <tr>
          <td><%= new Date(p.date).toLocaleDateString('fa-IR') %></td>
          <td>
            <% if (p.type === 'increase') { %>
              <span class="text-success">افزایش موجودی</span>
            <% } else if(p.type === 'purchase') { %>
              <span class="text-danger">خرید غذا</span>
            <% } else{ %>
                <span class="text-success">لغو و حذف رزرو غذا</span>
            <% } %>
          </td>
          <td>
            <% if (p.type === 'increase') { %>
              <span class="text-success">+ <%= p.amount.toLocaleString() %> تومان</span>
            <% } else if (p.type === 'purchase'){ %>
              <span class="text-danger">- <%= p.amount.toLocaleString() %> تومان</span>
            <% } else{ %>
                 <span class="text-success">+ <%= p.amount.toLocaleString() %> تومان</span>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
                        </table>

    <nav aria-label="Page navigation">
  <ul class="pagination pagination-sm justify-content-center">
    <% if (currentPage > 1) { %>
      <li class="page-item">
        <a class="page-link" href="?page=<%= currentPage - 1 %>">قبلی</a>
      </li>
    <% } else { %>
      <li class="page-item disabled"><span class="page-link">قبلی</span></li>
    <% } %>

    <% for(let i = 1; i <= totalPages; i++) { %>
      <li class="page-item <%= currentPage === i ? 'active' : '' %>">
        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
      </li>
    <% } %>

    <% if (currentPage < totalPages) { %>
      <li class="page-item">
        <a class="page-link" href="?page=<%= currentPage + 1 %>">بعدی</a>
      </li>
    <% } else { %>
      <li class="page-item disabled"><span class="page-link">بعدی</span></li>
    <% } %>
  </ul>
</nav>


        </div>
<div class="d-flex gap-3  mt-3">
    <div class="card p-5 flex-grow-1">
           <% if (amount) { %>
                <div class="alert alert-success" role="alert">
                    موجودی شما با موفقیت افزایش یافت.
                </div>
                <% } %>
<h5 class="text-center mb-4">💵 افزایش اعتبار</h5>

            <form id="increaseBalanceForm" action="/payment/addBalance" method="post">
                <div class="mb-3">
                    <label for="amountDisplay" class="form-label">مبلغ مورد نظر (تومان):</label>
                    <div class="input-group mb-3">
                        <input type="text"
                            class="form-control <% if (errors.find(e => e.path === 'amount')) { %>is-invalid<% } %>"
                            id="amountDisplay" inputmode="numeric" required>
                        <span class="input-group-text rounded-end" id="basic-addon1">تومان</span>
                        <input type="hidden" id="amount" name="amount" value="0">
                    </div>
                </div>

                <div class="mb-3 d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-secondary quick-add" data-amount="50000">+
                        ۵۰٬۰۰۰</button>
                    <button type="button" class="btn btn-outline-secondary quick-add" data-amount="100000">+
                        ۱۰۰٬۰۰۰</button>
                    <button type="button" class="btn btn-outline-secondary quick-add" data-amount="200000">+
                        ۲۰۰٬۰۰۰</button>
                </div>

                <button type="submit" class="btn btn-success w-100">افزایش</button>
            </form>
       

         </div>
         <div class="card p-5 flex-grow-1 justify-content-between align-items-center">
             <span><strong>موجودی فعلی:</strong> <span class="current-balance">
                                    <%= user.balance %>
                                </span> تومان</span>
                <span><strong>مبلغ بدهکاری:</strong> 
  <span class="current-balance">
    <%= user.balance < 0 ? Math.abs(user.balance) : 0 %>
  </span> تومان
</span>

              <span><strong>مبلغ بستانکاری:</strong> <span class="current-balance">
                                    <%= user.balance %>
                                </span> تومان</span>

         </div>
</div>
         

    </div>

<%- include('partials/appFooter'); -%>