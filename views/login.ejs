<%- include('partials/mainHeader'); -%>

<div class="container-fluid min-vh-100 d-flex justify-content-center align-items-center px-3" id="index-div">
  <div class="container rounded-3 shadow-lg p-4 p-md-5 text-center text-white" id="welcome-div">
    <h1 class="mb-4 mb-md-5 display-5 display-md-3">سامانه رزرو غذای دانشجویی</h1>
    <div class="container w-100 justify-content-center mb-3">
      <div class="card">
                <h3 class="d-flex card-header justify-content-center">وارد شوید!</h3>
                <div class="card-body">
                    <form method="post" id="login_form" action="/user/login">
                        <div class="form-floating mb-3">
                            <input type="text" name="emailOrUsername" id="emailOrUsername" class="form-control"
                                placeholder="UserName Or Email" required />
                            <label for="emailOrUsername">ایمیل یا نام کاربری</label>
                        </div>
                        <div class="input-group mb-3">
                            <div class="form-floating">
                                <input type="password" name="password" id="password" class="form-control"
                                    placeholder="Password" required />
                                <label for="password">رمز عبور</label>
                            </div>
                            <span class="input-group-text toggle-password" style="cursor: pointer">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-eye-fill" viewBox="0 0 16 16">
                                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0" />
                                    <path
                                        d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7" />
                                </svg>
                            </span>
                        </div>

                        <div class="d-grid gap-2 mt-1">
                            <input type="submit" name="register" id="primary" class="btn btn-primary" value="ورود" />
                        </div>
                    </form>
                </div>
            </div>
    </div>

    <div>
    </div>
  </div>
</div>

<%- include('partials/mainFooter'); -%>