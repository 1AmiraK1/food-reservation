<%- include('partials/mainHeader'); -%>

    <div class="container-fluid min-vh-100 d-flex justify-content-center align-items-center px-3" id="index-div">
        <div class="container rounded-3 shadow-lg p-4 p-md-5 text-center text-white" id="welcome-div">
            <h1 class="mb-4 mb-md-5 display-5 display-md-3"><a class="text-decoration-none text-light" href="/">سامانه
                    رزرو غذای دانشجویی</a></h1>
            <div class="container w-75 justify-content-center mb-3">
                <form method="post" id="register_form" action="/user/register">
                    <div class="form-floating mb-3 position-relative">
                        <input type="text" name="username" id="username" class="form-control <% if (errors.find(e => e.path === 'username')) { %>is-invalid<% } %>" placeholder="UserName"/>
                        <label for="username">نام کاربری</label>
                        <% let err1=errors.find(e=> e.path === 'username'); if (err1) { %>
                            <div class="invalid-tooltip">
                                <%= err1.msg %>
                            </div>
                            <% } %>
                    </div>
                    <div class="form-floating mb-3 position-relative">
                        <input type="text" name="email" id="email" class="form-control <% if (errors.find(e => e.path === 'email')) { %>is-invalid<% } %>" placeholder="Email"/>
                        <label for="email">ایمیل</label>
                        <% let err2=errors.find(e=> e.path === 'email'); if (err2) { %>
                            <div class="invalid-tooltip">
                                <%= err2.msg %>
                            </div>
                            <% } %>
                    </div>
                    <div class="d-flex gap-2">
                        <div class="input-group mb-3">
                            <div class="form-floating position-relative">
                                <input type="password" name="password" id="password" class="form-control <% if (errors.find(e => e.path === 'password')) { %>is-invalid<% } %>"
                                    placeholder="Password"/>
                                <label for="password">رمز عبور</label>
                                <% let err3=errors.find(e=> e.path === 'password'); if (err3) { %>
                            <div class="invalid-tooltip">
                                <%= err3.msg %>
                            </div>
                            <% } %>
                            </div>
                            <span class="input-group-text toggle-password">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-eye-slash-fill" viewBox="0 0 16 16">
                                    <path
                                        d="m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7 7 0 0 0 2.79-.588M5.21 3.088A7 7 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474z" />
                                    <path
                                        d="M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829zm4.95.708-2.829-2.83a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12z" />
                                </svg>
                            </span>
                        </div>
                        <div class="input-group mb-3">
                            <div class="form-floating position-relative">
                                <input type="password" name="confirmPass" id="confirmPass" class="form-control <% if (errors.find(e => e.path === 'confirmPass')) { %>is-invalid<% } %>"
                                    placeholder="تکرار رمز عبور"/>
                                <label for="confirmPass">تکرار رمز عبور</label>
                                <% let err4=errors.find(e=> e.path === 'confirmPass'); if (err4) { %>
                            <div class="invalid-tooltip">
                                <%= err4.msg %>
                            </div>
                            <% } %>
                            </div>
                            <span class="input-group-text toggle-password">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-eye-slash-fill" viewBox="0 0 16 16">
                                    <path
                                        d="m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7 7 0 0 0 2.79-.588M5.21 3.088A7 7 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474z" />
                                    <path
                                        d="M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829zm4.95.708-2.829-2.83a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12z" />
                                </svg>
                            </span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-1">
                        <input type="submit" name="register" id="primary"
                            class="btn1 btn btn-success fs-5 border-0 px-5" value="ثبت نام" />
                    </div>
                </form>
            </div>

            <div class="container d-flex w-75 justify-content-between mt-4">
                <a href="/resetpass" class="text-white text-decoration-none fw-light text-shadow small">فراموشی رمز
                    عبور</a>
                <a href="/login" class="text-white text-decoration-none fw-light text-shadow small">ورود</a>

            </div>
        </div>
    </div>

    <%- include('partials/mainFooter'); -%>