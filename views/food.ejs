<%- include('partials/appHeader'); -%>
    <div class="flex-column h-100">
        <h1 class="display-6 display-md-5 bold mb-4">
            <a class="text-decoration-none text-dark">🍽️ رزرو غذا</a>
        </h1>
        <div class="card p-5">
            <% if (success) { %>
                <div class="alert alert-success" role="alert">
                    موجودی شما با موفقیت افزایش یافت.
                </div>
                <% } else if (errors && errors.length> 0) { %>
                    <div class="alert alert-danger" role="alert">
                        خطایی پیش آمده است!
                        <ul class="m-0">
                            <% errors.forEach(item=> { %>
                                <li>
                                    <%= item.msg %>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                    <% } %>


                        <div
                            class="d-flex rounded justify-content-between align-items-center mb-4 p-3 bg-primary-subtle">
                            <span><strong>موجودی فعلی:</strong> <span class="current-balance">
                                    <%= user.balance %>
                                </span> تومان</span>
                            <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="offcanvas"
                                data-bs-target="#offcanvasBalance" aria-controls="offcanvasBalance">افزایش
                                موجودی</button>
                        </div>

                        <form id="foodReservationForm" action="/food/reserve" method="post">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="restaurant" class="form-label">رستوران:</label>
                                    <select class="form-select" id="restaurantDropdown" name="restaurant" required>
                                        <option value="">انتخاب کنید</option>
                                        <% restaurants.forEach(r=> { %>
                                            <option value="<%= r._id %>">
                                                <%= r.name %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="dayOfWeek" class="form-label">روز هفته:</label>
                                    <select class="form-select" id="dayOfWeek" name="dayOfWeek" required>
                                        <option value="">انتخاب کنید</option>
                                        <option value="شنبه">شنبه</option>
                                        <option value="یک‌شنبه">یک‌شنبه</option>
                                        <option value="دوشنبه">دوشنبه</option>
                                        <option value="سه‌شنبه">سه‌شنبه</option>
                                        <option value="چهارشنبه">چهارشنبه</option>
                                        <option value="پنج‌شنبه">پنج‌شنبه</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mb-3" id="foodSection" style="display: none;">
                                <label class="form-label">غذا:</label>
                                <div id="food-list" class="food-list">
                                    <div id="foodList" class="row g-3"></div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center mt-4">
                                <button type="submit" class="btn btn-primary">افزودن به رزرو</button>
                            </div>

                        </form>
        </div>
        <div class="card p-5 mt-3">
            <h5 class="mb-4">📋 لیست رزروها</h5>
            <table class="table table-bordered reservation-table table-striped">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>روز</th>
                        <th>غذا</th>
                        <th>رستوران</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody class="text-center" id="reservationList">
                    <% reservations.forEach(r=> { %>
                        <tr>
                            <td class="align-content-center">
                                <%= r.dayOfWeek %>
                            </td>
                            <td class="align-content-center">
                                <%= r.food.name %> (<%= r.foodPrice.toLocaleString() %> تومان)
                            </td>
                            <td class="align-content-center">
                                <%= r.restaurant.name %>
                            </td>
                            <td class="align-content-center">
                                <form action="/food/reserve/delete/<%= r._id %>" method="POST">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">❌
                                        حذف</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

    </div>

    <!-- Offcanvas -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasBalance" aria-labelledby="offcanvasBalanceLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasBalanceLabel">افزایش موجودی</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="بستن"></button>
        </div>
        <div class="offcanvas-body">
            <form id="increaseBalanceForm" action="/food/addBalance" method="post">
                <div class="mb-3">
                    <label for="amountDisplay" class="form-label">مبلغ مورد نظر (تومان):</label>
                    <div class="input-group mb-3">
                        <input type="text"
                            class="form-control <% if (errors && errors.find(e => e.path === 'amount')) { %>is-invalid<% } %>"
                            id="amountDisplay" inputmode="numeric">
                        <span class="input-group-text rounded-end" id="basic-addon1">تومان</span>
                        <input type="hidden" id="amount" name="amount" value="0">
                    </div>
                </div>

                <div class="mb-3 d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-secondary quick-add" data-amount="50000">+
                        ۵۰٬۰۰۰</button>
                    <button type="button" class="btn btn-outline-secondary quick-add" data-amount="100000">+
                        ۱۰۰٬۰۰۰</button>
                    <button type="button" class="btn btn-outline-secondary quick-add" data-amount="200000">+
                        ۲۰۰٬۰۰۰</button>
                </div>

                <button type="submit" class="btn btn-success w-100">افزایش</button>
            </form>
        </div>
    </div>
    <%- include('partials/appFooter'); -%>